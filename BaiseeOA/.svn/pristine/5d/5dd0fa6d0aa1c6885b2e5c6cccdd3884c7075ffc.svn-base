<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
<head th:include="commonTemplate :: header">
</head>
<body>
	<div id="page">
		<div id="content" class="layout">
			<div class="grid-s5m0">
				<div class="col-main">
					<div class="main-wrap">
						<div class="skin-box">
							<div class="skin-box-bd">
								<!-- ==================================== 页面内容开始 ============================= -->
								<div class="cont-box" style="text-align: center;">
									<h1 style="font-size: 170px;">500</h1>
									<div class="error-desc"><h3 class="font-bold" th:text="${errorMsg}"></h3>&nbsp;<span id="ffff"></span>&nbsp;秒后返回<a th:href="@{${homePage}}">首页</a></div>
									<div class="error-desc" th:text="${exceptionMsg}"></div>
								</div>
								<!-- ============================= 页面内容 结束============================= -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<input type="hidden" id="bms_global_errorCode" th:value="${errorCode}" />
	<input type="hidden" id="bms_global_errorMsg" th:value="${errorMsg}" />
	<input type="hidden" id="bms_global_exceptionMsg" th:value="${exceptionMsg}" />
	<script th:inline="javascript">
	var i = 5;
	var MyInterval=self.setInterval("backToIndex()",1000);
	$(function(){
		$("#ffff").html(i);
	});
	function backToIndex(){
		i --;
	/*<![CDATA[*/
		if(i < 1) {
	/*]]>*/
		clearInterval(MyInterval);
		window.location.href=[[@{/}]] + [[${homePage}]];
		}
		$("#ffff").html(i);
	}
	</script>
</body>
</html>

