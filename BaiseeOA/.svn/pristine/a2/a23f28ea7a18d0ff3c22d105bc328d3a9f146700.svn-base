 .control-text:after{ content: '\20'; display: block; height: 0; clear: both; }
/* -------数字框--------**/
.control-adjustment .ks-up-btn,.control-adjustment .ks-dn-btn{
	background:url("img-control/btn-01.png") #fff left bottom no-repeat;
	display: block;
	height: 50%;
	width: 8px;
}
.control-adjustment .ks-dn-btn{
	background-position: left top;
}
.control-adjustment{
	display:inline-block;
    width: 100px;
    height: 25px;
    border: 1px solid #ccc;
}

.control-adjustment .frame {
    position: relative;
    width: 100%;
    height: 100%;
}

.control-adjustment .frame .ks-input{
    border: none;
    height: 100%;
    width: 100%;
    padding-left: 1px;
}
.control-adjustment .frame .ks-input:focus,.control-adjustment .frame input:focus {
            outline: none;
       }
.control-adjustment .frame .ks-hide{
	display:none;
	}
.control-adjustment .adjust-btn {
    position: absolute;
    right: 0px;
    top: 0;
    height: 100%;
    width: 9px;
}


/*----------------复选框-------------------*/
.control-checkbox{
    width:17px;
    height:17px;
    display:inline-block;
    background:url("img-control/checkbox.png") #fff left top no-repeat;
}

.ks-checked{
	background-position:bottom left;
	}
.control-checkbox input{
	display:none;
	}

/*----------------单选框-------------------*/
.control-radio{
    width:17px;
    height:17px;
    display:inline-block;
	margin-top:5px;
    background:url("img-control/radio.png") left top no-repeat;
}

.ks-radio{
	background-position:bottom left;
	}
.control-radio input{
	display:none;
	}

/*---------------操作箭头------------------*/
.control-operate{
	height:27px;
	width:24px;
	background:url("img/03-icon-red.png") no-repeat -2px -124px;
	display:inline-block;
	cursor:pointer;
	}
/*----------------文本框-------------------*/
.control-text{
    width:355px;
    display:inline-block;
	border:1px solid #fff;
}
.control-text .control-text-ico{
	background:url("img/shape-01.png") no-repeat left top;
    width:35px;
    height:35px;
    display:inline-block;
	margin:11px 0 8px 5px;
	float:left;
}
.control-text .control-input-text{
	float:left;
	margin:8px 0 0 15px;
	}
.control-text .control-input-text .input{
	height:35px;
	width:300px;
	margin:0;
	padding:0;
	font-size:20px;
	line-height:35px;
	background:none;
	border:none;
	color:#fff;
	}

.control-text .control-input-text input:focus {
            outline: none;
       }
/*----------------按钮-------------------*/
.control-button button,.control-button .button{
	width:360px;
	height:42px;
	margin:8px 0 0 5px;
	border:none;
	border-bottom:2px #f00 solid;
	font-weight: bold;
	color:#fff;
	background:#ff5757;
	}

.control-button .ks-down{
	background: #b23d3d;
	border-color:  #b23d3d;
}
/*---------------------下拉列表框--------------------------*/

.control-select{
	position: relative;
	width: 200px;
	height: 40px;
	border: 1px solid #ccc;
	background: #fff;
}
.control-select .ks-select-txt:focus {
            outline: none;
       }
.control-select .ks-select-input{
	height: 100%;
	width: 100%;
}
.control-select .ks-select-txt {
	border: none;
	height: 100%;
	width: 100%;
	line-height: 1;
	cursor:default;
	background: none;
       }
.control-select .ks-select-btn{
	background: url("img-control/select-btn.png") no-repeat 0 -15px #fff;
	display: block;
	height:100%;
	width: 18px;
	position: absolute;
	right: 5px;
	top: 0px;
}

.control-select  .ks-select-pop{
	background-position: 0 16px;
}
.control-select  .ks-option-box{
	display: none;
	width: 100%;
	height: 100px;
	overflow-y:auto;
	overflow-y:scroll;
	border: 1px solid #ccc;
	background: #fff;
}

.control-select  .ks-option{
	padding: 5px 0;
}
.control-select  .ks-hover{
	background: #ccc;
}





/*---------------------CSS3下拉列表框样式--------------------------*/
.control-css3select{
	width:200px;
	height:40px;
	line-height: 1;
	display:inline-block;
	position:relative;
}
.control-css3select select{
	width:100%;
	height:100%;
	border: 1px solid #ccc;
	-o-appearance:none;
	-webkit-appearance:none;
	-moz-appearance:none;
	appearance:none;
}
.control-css3select:after{
	content:"";
	position:absolute;
	top:0;
	right:0;
	bottom:0;
	width:20px;
	vertical-align:middle;
	text-align:center;
	background:url("img-control/select-btn.png") no-repeat center -15px;
	pointer-events:none;
	border: 1px solid #ccc;
	border-left: none;
}
.control-css3select select option{
    padding: 2px 10px;
    border: none;
    font-weight: normal;
}
.css3select-icon-hide:after{
	background:none;
}